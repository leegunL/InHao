* {
    margin: 0;
    padding: 0;
}
li {
    list-style: none;
}

html,body {
    width: 100%;
    height: 100%;
    background: url(../img/bg.jpg) no-repeat;
    background-size: cover;
    overflow: hidden;
}

#picList {
    width: 720px;
    height: 560px;
    position: relative;
    top: 50%;
    left: 50%;
    margin-top: -280px;
    margin-left: -360px;
    overflow: hidden;
}

#picList li {
    float: left;
    width: 230px;
    height: 160px;
    border: 1px solid #fff;
    margin: 4px;
    cursor: pointer;
}

#picList li img {
    width: 100%;
    height: 100%;
}



#mark {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

#showImg {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -325px;
    margin-top: -225px;
}

#showImg li {
    position: absolute;
    top: 0;
    left: 0;
    width: 648px;
    height: 448px;
    border: 1px solid #fff;
}

#showImg li img {
    width: 100%;
    height: 100%;
}

#prev, #next {
    position: absolute;
    width: 50px;
    height: 80px;
    line-height: 80px;
    text-align: center;
    top: 50%;
    margin-top: -40px;
    background: #000;
    border-radius: 10px;
    color: #fff;
    box-shadow: 0 0 20px #fff;
    cursor: pointer;
}

#prev {
    left: 100px;
}
#next {
    right: 100px;
}

